{
  "name": "translationX",
  "icon": "images/icon.jpg",
  "displayName": "translationX",
  "keywords": [
    "翻译X",
    "translationX",
    "翻译"
  ],
  "publisher": "Saraph1nes",
  "description": "开源极简易用的翻译插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "translationX",
      "properties": {
        "translationX.engine": {
          "order": 1,
          "scope": "window",
          "default": "youdaoFree",
          "type": "string",
          "enum": [
            "youdaoFree",
            "youdao",
            "microsoft"
          ],
          "enumItemLabels": [
            "有道免费版",
            "有道翻译",
            "微软翻译"
          ],
          "enumDescriptions": [
            "有道免费版引擎",
            "有道翻译引擎",
            "微软翻译引擎"
          ],
          "description": "选择翻译引擎"
        },
        "translationX.translationId": {
          "order": 2,
          "scope": "window",
          "type": "string",
          "description": "应用ID"
        },
        "translationX.translationKey": {
          "order": 3,
          "scope": "window",
          "type": "string",
          "description": "应用秘钥"
        }
      }
    },
    "commands": [
      {
        "command": "translatex.translate",
        "title": "翻译"
      },
      {
        "command": "translatex.translateAndReplace",
        "title": "翻译并替换"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "translatex.translate",
          "group": "navigation",
          "when": "editorTextFocus && editorHasSelection"
        },
        {
          "command": "translatex.translateAndReplace",
          "group": "navigation",
          "when": "editorTextFocus && editorHasSelection"
        }
      ]
    }
  },
  "enabledApiProposals": [
    "contribEditorContentMenu"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "publish": "vsce package",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.54.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Saraph1nes/vscode-transX.git"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "crypto-js": "^4.1.1"
  }
}